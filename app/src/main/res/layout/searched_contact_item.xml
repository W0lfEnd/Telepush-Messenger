<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/contact_item_height">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/contact_item_height"
                    android:layout_height="@dimen/contact_item_height"
                    android:src="@color/icons" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/searchedContactNickname"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="2"
                        android:text="Contact nickname"
                        android:textColor="@color/primary_text"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/searchedContactEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:maxLength="30"
                        android:text="Contact email"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />


                </LinearLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/addUserToContactsButton"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="18dp"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/ic_plus_circle_outline"
                        android:scaleType="fitXY"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ripple_circle"
                        android:tint="@color/secondary_text"
                        />
                </FrameLayout>



            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</FrameLayout>
